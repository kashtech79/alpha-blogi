<div id="page-content">
    <h1 class="text-center mt-4">Show Article</h1>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
        
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        by <%= @article.user.username if @article.user %>
                        <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
                    </div>
                    <div class="card-body">
                        <%# <h5 class="card-title"><%= (@article), class: "text-success" %></h5>
                        <div class="card-text text-left"><%= simple_format(@article.description) %></div>
                        <% if logged_in? && @article.user == current_user %>
                            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                            <%= link_to "Delete", article_path(@article), method: :delete, class: "btn btn-outline-danger" %>
                        <% end %>                        
                    </div>
                
                    <div class="card-footer text-muted">
                        <small>Updated <%=time_ago_in_words(@article.created_at)%> ago, Edited <%= time_ago_in_words(@article.updated_at)%> ago </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>